<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/main.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game {{ state.progress }}</title>
  </head>
  <body>
    <div class="mx-auto max-w-xl">
      {% for index in incorrect %}
        <div class="bg-blue-50 p-4">{{ questions[index].question }}</div>
        <ul class="p-4">
          {% for answer in questions[index].answers %}
            {% if questions[index].corrects[loop.index0] %}
              <li>{{ answer }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endfor %}
      <div class="p-4">
        <a href="/" class="text-blue-500">Back to game</a>
      </div>
      <form action="/reset" method="post" class="p-4">
        <input type="hidden" name="score" value="0" />
        <input type="hidden" name="incorrect" value="" />
        <div>
          <label for="exam">Exam (1-16): </label>
          <input
            type="number"
            id="exam"
            name="exam"
            value="0"
            min="1"
            max="16"
            class="ml-4 border-2"
          />
        </div>
        <div>
          <label for="sure">Yes, I'm sure.</label>
          <input type="checkbox" id="sure" name="sure" class="ml-4" required />
        </div>
        <div>
          <button type="submit" class="text-blue-500">Reset</button>
        </div>
      </form>
    </div>
  </body>
</html>
